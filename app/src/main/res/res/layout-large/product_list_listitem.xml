<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/product_list_card_view"
        android:layout_gravity="center"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/product_list_listitem_imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:focusable="false"
            android:focusableInTouchMode="false"

             />

        <TextView
            android:id="@+id/product_list_listitem_textView_title"
            android:layout_width="wrap_content"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="Title" />
        <TextView
            android:id="@+id/product_list_listitem_textView_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:text="Code" />
        <TextView
            android:id="@+id/product_list_listitem_textView_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:text="Price" />

        <Button
            android:id="@+id/product_list_listitem_button_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="10dp"
            android:text="Order Now" />

    </android.support.v7.widget.CardView>

</LinearLayout>