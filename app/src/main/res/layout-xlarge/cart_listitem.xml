<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bgColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/product_list_card_view"
        android:focusable="false"
        app:cardPreventCornerOverlap="false"
        android:layout_margin="10dp"
        app:cardUseCompatPadding="true"
        android:focusableInTouchMode="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageView
                android:padding="30dp"
                android:id="@+id/product_list_listitem_imageView"
                android:layout_width="210dp"
                android:layout_height="300dp"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/testing"
                android:layout_margin="15dp"
                android:focusableInTouchMode="false" />



            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/product_list_listitem_textView_title"
                    android:layout_width="match_parent"
                    android:layout_margin="15dp"
                    android:layout_marginBottom="5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="30sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/colorBlack"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_height="wrap_content"
                    android:text="Title" />
                <TextView
                    android:id="@+id/product_list_listitem_textView_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:layout_marginBottom="5dp"
                    android:focusable="false"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:focusableInTouchMode="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="30sp"
                    android:text="Code"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/product_list_listitem_textView_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/open_sans"
                    android:layout_marginBottom="5dp"
                    android:focusable="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:focusableInTouchMode="false"
                    android:textSize="34sp"
                    android:text="Price"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    >

                    <TextView
                        android:id="@+id/product_list_listitem_textView_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:maxLines="1"
                        android:layout_gravity="center_vertical"
                        android:focusable="false"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/colorBlack"
                        android:focusableInTouchMode="false"
                        android:textSize="30sp"
                        android:text="Quantity"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_weight="2">

                        <ImageView
                            android:id="@+id/btn_remove_cart"
                            android:background="@drawable/delete"
                            android:layout_gravity="end"
                            android:layout_marginRight="25dp"
                            android:layout_marginBottom="15dp"
                            android:textColor="#fff"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>