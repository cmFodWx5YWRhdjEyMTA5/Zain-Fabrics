<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/product_list_card_view"
        android:focusable="false"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:layout_marginRight="10dp"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/progress_related"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="visible"
                android:layout_gravity="center"/>
            <ImageView
                android:padding="10dp"
                android:id="@+id/product_list_listitem_imageView"
                android:layout_width="240dp"
                android:layout_height="330dp"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/testing"
                android:focusableInTouchMode="false"

                />
            </FrameLayout>
            <TextView
                android:id="@+id/product_list_listitem_textView_title"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="22sp"
                android:fontFamily="@font/raleway_medium"
                android:textAlignment="center"
                android:minLines="2"
                android:textColor="@color/strike"
                />
            <TextView
                android:id="@+id/product_list_listitem_textView_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="@font/raleway_medium"
                android:maxLines="1"
                android:focusable="false"
                android:textColor="@color/colorPrimaryDark"
                android:focusableInTouchMode="false"
                android:layout_marginBottom="10dp"
                android:textSize="22sp"
                android:text="Price"
                android:padding="3dp"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>